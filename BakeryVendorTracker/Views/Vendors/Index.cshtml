@{
  Layout = "_Layout";
}

@using BakeryVendorTracker.Models;

@if (@Model.Count == 0)
{
  <h5>No Vendors Have Been Add To This List</h5>
}
<h3>Vendor List</h3>
@foreach (Vendor vendor in Model)
{
  <h5><a href='/vendors/@vendor.VendorId'>@vendor.VendorName @vendor.VendorDescription</a></h5>
}

<button><a href='/'>Back home</a></button>